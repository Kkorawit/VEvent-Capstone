type Query {
    allEvents: [Event]
    findAllEventsByUid(uid: ID): [User_Event]
    findById(id: ID): Event
}

type User_Event {
    user_event_id: ID!
    user: User
    event: Event
    status:String
}

type User {
    userId: ID!
    username: String
    password: String
    userEmail: String
    name: String
    surName: String
    profileImg: String
}

type Event {
    id: ID!
    title: String
    eventDescription: String
    amountReceived: String
    category: String
    subCategory: String
    startDate: String
    endDate: String
    eventOwner: String
    registerStartDate: String
    registerEndDate: String
    validationType: String
    validationRules: Float
    posterImg: String
    createBy: String
    createDate: String
    updateBy: String
    updateDate: String
    locationName: String
    locationLatitude: Float
    locationLongitude: Float
    description: String
}